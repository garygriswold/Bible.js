<?xml version='1.0' encoding='utf-8'?>
<widget id="com.shortsands.bibleapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Bible.js</name>
    <description>
        A Bible App designed for the free distribution of the Bible in any language.
    </description>
    <author email="gary@shortsands.com" href="http://shortsands.com">
        Gary N Griswold, Short Sands
    </author>
    <content src="index.html" />
    <preference name="BackupWebStorage" value="local" />
    <preference name="iosPersistentFileLocation" value="Library" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <access origin="*" />
</widget>
